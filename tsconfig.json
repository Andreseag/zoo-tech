{
  "references": [
    { "path": "packages/core" },
    { "path": "packages/ui" },
    { "path": "apps/desktop" }
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@zoo-tech/core": ["packages/core/src/index.ts"],
      "@zoo-tech/core/*": ["packages/core/src/*"],
      "@zoo-tech/ui": ["packages/ui/src/index.ts"],
      "@zoo-tech/ui/*": ["packages/ui/src/*"],
      "@zoo-tech/api": ["packages/api/src/index.ts"],
      "@zoo-tech/api/*": ["packages/api/src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["packages", "apps"]
}
